<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="240.0" prefWidth="400.0" stylesheets="@../style/style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.SignUpController">
   <children>
       <VBox alignment="CENTER" layoutX="107.0" layoutY="24.0" spacing="10.0">
          <children>
              <Label id="title" text="Kayıt Ol">
                  <font>
                      <Font name="Comic Sans MS Bold" size="18.0" />
                  </font>
              </Label>
              <TextField fx:id="username" promptText="Kullanıcı Adı" />
              <PasswordField fx:id="password" promptText="Şifre" />
            <PasswordField fx:id="repassword" promptText="Tekrar Şifre" />
          </children>
       </VBox>
        <Button layoutX="161.0" layoutY="184.0" mnemonicParsing="false" onAction="#signup" prefHeight="25.0" prefWidth="80.0" text="Kayıt Ol" />
   </children>
</AnchorPane>
